@model WatchList.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Styles.css" />
</head>
<body>
    <section class="vh-100 opa">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card custom-card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="/Images/Scenery_gate_river.png"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form asp-action="Login" method="post">

                                        <div class="d-flex align-items-center mb-3 pb-1 text-yellow">
                                            <span class="h1 fw-bold mb-0">WatchList Login</span>
                                        </div>

                                        <div asp-validation-summary="All" style="color:lightgoldenrodyellow"></div>

                                        <h5 class="fw-normal mb-3 pb-3 text-yellow" style="letter-spacing: 1px;">Sign into your account</h5>

                                        <div class="form-outline mb-1">
                                            <input asp-for="LoginName" type="text" class="form-control form-control-lg" />
                                            <label asp-for="LoginName" class="form-label text-yellow">UserName</label>
                                        </div>

                                        <div class="form-outline mb-1">
                                            <input asp-for="Password" type="password" class="form-control form-control-lg" />
                                            <label asp-for="Password" class="form-label text-yellow">Password</label>
                                        </div>

                                        <div class="pt-1">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>